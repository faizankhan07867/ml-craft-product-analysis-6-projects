from textblob import TextBlob
import wordcloud
from wordcloud import WordCloud

reviews = [
    "Absolutely stunning handmade vase! Worth every penny",
    "Poor packaging, item arrived broken. Very disappointed",
    "Beautiful craftsmanship, fast shipping, will buy again!",
    "Overpriced for the quality. Not satisfied",
    "The best macrame I've ever bought! So unique"
]

sentiments = []
keywords = []

for review in reviews:
    blob = TextBlob(review)
    sentiment = "Positive" if blob.sentiment.polarity > 0.1 else ("Negative" if blob.sentiment.polarity < -0.1 else "Neutral")
    sentiments.append(sentiment)
    print(f"Review: {review[:50]}... â†’ {sentiment} (Score: {blob.sentiment.polarity:.2f})")

# Word Cloud
text = " ".join(reviews)
