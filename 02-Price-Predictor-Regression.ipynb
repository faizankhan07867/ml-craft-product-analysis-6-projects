from sklearn.linear_model import LinearRegression
from sklearn.preprocessing import PolynomialFeatures
import seaborn as sns

df['material_cost'] = df['price'] * 0.4 + np.random.normal(0, 50, 100)
df['craft_time_hours'] = np.random.randint(1, 20, 100)
df['popularity_score'] = df['num_reviews'] * df['rating']

X = df[['material_cost', 'craft_time_hours', 'popularity_score', 'seller_rating']]
y = df['price']

poly = PolynomialFeatures(degree=2)
X_poly = poly.fit_transform(X)

model = LinearRegression()
model.fit(X_poly, y)
print(f"Price Prediction R2: {model.score(X_poly, y):.3f}")

# Visualization
plt.figure(figsize=(10,6))
sns.scatterplot(x=df['material_cost'] + df['craft_time_hours']*30, y=df['price'])
plt.plot(sorted(df['material_cost'] + df['craft_time_hours']*30), 
         model.predict(poly.transform(sorted(X_poly, key=lambda x: x[1]))[:100]), 
         color='red', linewidth=3)
plt.title("Price vs Cost + Time (Polynomial Regression)")
plt.xlabel("Estimated Effort + Material Cost")
plt.ylabel("Selling Price (â‚¹)")
plt.show()
