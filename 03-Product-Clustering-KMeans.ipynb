# PRODUCT CLUSTERING PROJECT - FULL SOURCE CODE
# --------------------------------------------------------

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from sklearn.cluster import KMeans
from sklearn.preprocessing import StandardScaler
import pickle

# --------------------------------------------------------
# STEP 1: CREATE SAMPLE PRODUCT DATA
# --------------------------------------------------------

df = pd.DataFrame({
    'price': np.random.randint(100, 2000, 200),
    'rating': np.random.uniform(3.0, 5.0, 200),
    'num_reviews': np.random.randint(5, 1000, 200),
})

# Feature engineering
df['popularity'] = df['rating'] * df['num_reviews']
df['value_score'] = df['rating'] / df['price']

print("Sample Data:")
print(df.head())

# --------------------------------------------------------
# STEP 2: SELECT FEATURES FOR CLUSTERING
# --------------------------------------------------------

features = ['price', 'rating', 'num_reviews', 'popularity', 'value_score']
X = df[features]

# --------------------------------------------------------
# STEP 3: SCALE FEATURES
# --------------------------------------------------------

scaler = StandardScaler()
X_scaled = scaler.fit_transform(X)

# --------------------------------------------------------
# STEP 4: APPLY K-MEANS CLUSTERING
# --------------------------------------------------------

k = 3  # number of clusters
kmeans = KMeans(n_clusters=k, random_state=42, n_init=10)
df['cluster'] = kmeans.fit_predict(X_scaled)

print("\nCluster Assigned:")
print(df['cluster'].value_counts())

# --------------------------------------------------------
# STEP 5: VISUALIZE CLUSTERS (Price vs Popularity)
# --------------------------------------------------------

plt.figure(figsize=(8, 6))
plt.scatter(df['price'], df['popularity'], c=df['cluster'], s=60)
plt.xlabel("Price")
plt.ylabel("Popularity")
plt.title("Product Clusters")
plt.show()

# --------------------------------------------------------
# STEP 6: SAVE MODEL + SCALER
# --------------------------------------------------------

with open("cluster_model.pkl", "wb") as f:
    pickle.dump(kmeans, f)

with open("cluster_scaler.pkl", "wb") as f:
    pickle.dump(scaler, f)

print("\nModel saved as cluster_model.pkl & cluster_scaler.pkl")

# --------------------------------------------------------
# STEP 7: CLUSTER PREDICTOR FUNCTION
# --------------------------------------------------------

def predict_cluster(price, rating, num_reviews):
    """Predicts cluster for a new product"""

    # Load saved objects
    model = pickle.load(open("cluster_model.pkl", "rb"))
    scaler = pickle.load(open("cluster_scaler.pkl", "rb"))

    popularity = rating * num_reviews
    value_score = rating / price

    new_data = np.array([[price, rating, num_reviews, popularity, value_score]])
    new_scaled = scaler.transform(new_data)

    cluster = model.predict(new_scaled)[0]
    return cluster

# Example prediction
example_cluster = predict_cluster(499, 4.6, 150)
print("\nExample Product Cluster:", example_cluster)

