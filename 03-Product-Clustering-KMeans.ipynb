from sklearn.cluster import KMeans
from sklearn.preprocessing import StandardScaler

features = df[['price', 'rating', 'num_reviews', 'shipping_days']]
scaler = StandardScaler()
X_scaled = scaler.fit_transform(features)

kmeans = KMeans(n_clusters=3, random_state=42)
clusters = kmeans.fit_predict(X_scaled)
df['cluster'] = clusters

plt.figure(figsize=(10,7))
scatter = plt.scatter(df['price'], df['rating'], c=df['cluster'], cmap='viridis', s=100)
plt.title("Product Clusters: Premium vs Budget vs Trending")
plt.xlabel("Price (â‚¹)")
plt.ylabel("Rating")
plt.colorbar(scatter)
plt.grid(True, alpha=0.3)
plt.show()

print("Cluster 0: Budget Friendly")
print("Cluster 1: Premium Handmade")
print("Cluster 2: Trending & Fast Shipping")
